{
  "name": "github-actions-public",
  "version": "3.0.3",
  "private": true,
  "description": "GitHub Actions",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "eslint src/**/*.ts",
    "package:find-terraform-changes": "ncc build lib/find-terraform-changes.js --source-map -o find-terraform-changes",
    "package:install-tfmask": "ncc build lib/install-tfmask.js --source-map -o install-tfmask",
    "package:post-issue-to-card": "ncc build lib/post-issue-to-card.js --source-map -o post-issue-to-card",
    "package": "run-p package:*",
    "test:unit": "jest unit --passWithNoTests",
    "test:int": "jest integration --passWithNoTests",
    "all": "run-s build format lint package test:unit",
    "prepare": "husky install",
    "publish:major": "npm version major && git push --follow-tags",
    "publish:minor": "npm version minor && git push --follow-tags",
    "publish:patch": "npm version patch && git push --follow-tags"
  },
  "dependencies": {
    "@actions/core": "^1.4.0",
    "@actions/exec": "^1.1.0",
    "@actions/github": "^5.0.0",
    "@actions/glob": "^0.2.0",
    "@actions/io": "^1.1.1",
    "@actions/tool-cache": "^1.7.1",
    "@hashicorp/js-releases": "^1.4.0",
    "@octokit/webhooks-definitions": "^3.67.0",
    "find-up": "^5.0.0",
    "lodash-es": "^4.17.21",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.15.0",
    "@types/jest": "^26.0.24",
    "@types/lodash-es": "^4.17.4",
    "@types/node": "^16.4.13",
    "@types/node-fetch": "^2.5.12",
    "@types/uuid": "^8.3.1",
    "@typescript-eslint/parser": "^4.29.0",
    "@vercel/ncc": "^0.29.0",
    "babel-jest": "^27.0.6",
    "cross-env": "^7.0.3",
    "eslint": "^7.32.0",
    "eslint-plugin-github": "^4.1.5",
    "eslint-plugin-jest": "^24.4.0",
    "eslint-plugin-prettier": "^3.4.0",
    "husky": "^7.0.1",
    "jest": "^27.0.6",
    "jest-circus": "^27.0.6",
    "js-yaml": "^4.1.0",
    "lint-staged": "^11.1.2",
    "npm-run-all": "^4.1.5",
    "prettier": "2.3.2",
    "strip-json-comments": "^3.1.1",
    "svg-element-attributes": "^2.0.0",
    "ts-jest": "^27.0.4",
    "ts-node": "^10.2.0",
    "typescript": "^4.3.5"
  }
}
