{
  "name": "github-actions-public",
  "version": "1.2.0",
  "private": true,
  "description": "GitHub Actions",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "eslint src/**/*.ts",
    "package:find-terraform-changes": "ncc build lib/find-terraform-changes.js --source-map -o find-terraform-changes",
    "package:install-tfmask": "ncc build lib/install-tfmask.js --source-map -o install-tfmask",
    "package": "run-p package:*",
    "test:unit": "jest unit --passWithNoTests",
    "test:int": "jest integration --passWithNoTests",
    "all": "run-s build format lint package test:unit",
    "precommit": "lint-staged",
    "prepare": "husky install",
    "publish:major": "npm version major && git push --follow-tags",
    "publish:minor": "npm version minor && git push --follow-tags",
    "publish:patch": "npm version patch && git push --follow-tags"
  },
  "dependencies": {
    "@actions/core": "^1.2.6",
    "@actions/exec": "^1.0.4",
    "@actions/github": "^4.0.0",
    "@actions/glob": "^0.1.1",
    "@actions/io": "^1.0.2",
    "@actions/tool-cache": "^1.6.1",
    "@hashicorp/js-releases": "git+https://git@github.com/LangdalP/js-releases.git#a4884e6a2f0ca55e66cc301b8a6de66bd2921883",
    "find-up": "^5.0.0",
    "lodash-es": "^4.17.21",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.13.12",
    "@types/jest": "^26.0.22",
    "@types/lodash-es": "^4.17.4",
    "@types/node": "^14.14.37",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/parser": "^4.20.0",
    "@vercel/ncc": "^0.27.0",
    "babel-jest": "^26.6.3",
    "cross-env": "^7.0.3",
    "eslint": "^7.23.0",
    "eslint-plugin-github": "^4.1.2",
    "eslint-plugin-jest": "^24.3.2",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "jest-circus": "^26.6.3",
    "js-yaml": "^4.0.0",
    "lint-staged": "^10.5.4",
    "npm-run-all": "^4.1.5",
    "prettier": "2.2.1",
    "strip-json-comments": "^3.1.1",
    "svg-element-attributes": "^1.3.1",
    "ts-jest": "^26.5.4",
    "typescript": "^4.2.3"
  }
}
